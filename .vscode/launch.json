    "version": "0.2.0",
    "configurations": [
        {
            "name": "Docker Compose: Debug",
            "type": "docker-compose",
            "request": "launch",
            "service": "vanilla",
            "dockerCompose": {
                "dockerComposeFile": "${workspaceFolder}/docker-compose.yml",
                "projectName": "vanilla"
            },
            "cwd": "${workspaceFolder}",
            "args": ["up", "--build", "-d"],
            "preLaunchTask": "docker-compose down"
        },
        {
            "name": "GoLang",
            "type": "go",
            "request": "launch",
            "mode": "debug",
            "program": "${workspaceFolder}/gobackend/gobackend",
            "preLaunchTask": "build-gobackend",
            "args": []
        },
        {
            "name": "Python: Django",
            "type": "python",
            "request": "launch",
            "program": "${workspaceFolder}/web/manage.py",
            "args": [
                "runserver", "localhost:8082"
            ],
            "django": true,
            "justMyCode": true
        }
    ]
}